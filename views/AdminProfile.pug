include utilities/adminHeader.pug
link(rel='stylesheet', href='/static/css/profileCss/profile.css')
body
    .container(style = "min-height: 442px;")
        .main-body(style="padding-left: 400px; padding-top: 40px;")
            // /Breadcrumb
            .row.gutters-sm
                .col-md-4.mb-3
                    .card(style= "min-width: 300px;")
                        .card-body
                            .d-flex.flex-column.align-items-center.text-center
                                img.rounded-circle(src=user.img, alt='Admin', width='150')
                                .mt-3
                                    h4 #{user.fullName}
                                    
                                        if user.gender == "female"
                                            i.fas.fa-venus(style="color: pink; float: left;")
                                        else    
                                            i.fas.fa-mars(style="color: #0984e3; float: left;") 
                                    
                                    p.text-secondary.mb-1 #{user.title}
                                    p.text-secondary.mb-1 #{user.address}
                                    p.text-secondary.mb-1 #{user.email}
                                    p.text-secondary.mb-1 #{user.phone}


include utilities/footer.pug