    script(src='/static/js/vendor/bootstrap/js/bootstrap.bundle.min.js')
    // Core plugin JavaScript
    script(src='/static/js/vendor/jquery-easing/jquery.easing.min.js')
    // Custom scripts for all pages
    script(src='/static/js/dashboard/sb-admin-2.js')
