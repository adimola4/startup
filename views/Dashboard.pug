    script(src='/static/js/vendor/chart.js/Chart.min.js')
    // Page level custom scripts
    script(src='/static/js/dashboard/demo/chart-area-demo.js')
    script(src='/static/js/dashboard/demo/chart-pie-demo.js')
    script(src='/static/js/dashboard/demo/chart-bar-demo.js')


